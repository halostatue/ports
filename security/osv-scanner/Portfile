PortSystem          1.0
PortGroup           golang 1.0

go.setup            github.com/google/osv-scanner 2.2.3 v
github.tarball_from archive
revision            0

description         Dependency vulnerability scanner using data provided by https://osv.dev
long_description    {*}${description}

categories          security
installs_libs       no
license             Apache-2
maintainers         {macports.halostatue.ca:austin @halostatue} \
                    openmaintainer

checksums           rmd160  1a1d3664a0f77ae3850fe51f31eadb383a7cad76 \
                    sha256  f6e6f6265dfbd4df87121c9d3feda8bd6d47ff0de98eaa773999df0bc8873f2a \
                    size    12138141

go.offline_build    no

build.pre_args-append \
    -ldflags \" -s -w \
      -X ${go.package}/internal/version.OSVVersion=${github.tag_prefix}${version} \
      -X main.commit=release -X main.date=2024-03-11T00:00:00Z \
    \"

build.args          -o bin/ \
                    ./cmd/osv-reporter \
                    ./cmd/osv-scanner

destroot {
    xinstall -m 0755 {*}[glob ${worksrcpath}/bin/*] ${destroot}${prefix}/bin
}