PortSystem          1.0
PortGroup           golang 1.0

go.setup            github.com/google/osv-scanner 2.3.0 v
revision            0

description         Dependency vulnerability scanner using data provided by https://osv.dev
long_description    {*}${description}

categories          security
installs_libs       no
license             Apache-2
maintainers         {macports.halostatue.ca:austin @halostatue} \
                    openmaintainer

checksums           rmd160  51622d1095b5b8499220d6532bc5129d498048aa \
                    sha256  64b1df1cd7c5c6f8508628fe2ead1969bd9bcf5e3d7d72b3a61ceab8ccae34f8 \
                    size    13175574

go.offline_build    no

build.pre_args-append \
    -ldflags \" -s -w \
      -X ${go.package}/internal/version.OSVVersion=${github.tag_prefix}${version} \
      -X main.commit=release -X main.date=2024-03-11T00:00:00Z \
    \"

build.args          -o bin/ \
                    ./cmd/osv-reporter \
                    ./cmd/osv-scanner

destroot {
    xinstall -m 0755 {*}[glob ${worksrcpath}/bin/*] ${destroot}${prefix}/bin
}
