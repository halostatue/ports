github.setup        rbenv ruby-build 20221124 v
categories          ruby
license             MIT
platforms           darwin
supported_archs     noarch

maintainers         {mojca @mojca} openmaintainer

description         Compile and install Ruby
long_description    ${description}

checksums           rmd160  cc16aec0e0be3417004c2b5b15b502ac3f505730 \
                    sha256  66b2f14d7a9eb17eb0081f33ccde339011aed93a4ae69526ada2a45f3b96684b \
                    size    79352

use_configure       no
build {}
destroot.cmd        ./install.sh
destroot.env        PREFIX=${destroot}${prefix}

depends_lib         port:rbenv

variant standalone description {Installs ruby-build without also installing rbenv} {
    depends_lib-delete port:rbenv
}
